<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.authFragments.welcomeScreenFragment" >

    <TextView
        android:id="@+id/welcome_page_tv_headline"
        android:layout_width="310dp"
        android:layout_height="56dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="casual"
        android:text="ARE YOU A ?"
        android:textAlignment="center"
        android:textColor="@color/green_dark"
        android:textSize="42dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/welcome_page_bt_providers"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="195dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="FlowerZIL Provider"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="@color/green_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/welcome_page_bt_guest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_page_tv_headline" />

    <Button
        android:id="@+id/welcome_page_bt_guest"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="195dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="FLowerZIL Guest"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="@color/green_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/welcome_page_bt_providers"
        app:layout_constraintTop_toBottomOf="@+id/welcome_page_tv_headline" />

</androidx.constraintlayout.widget.ConstraintLayout>