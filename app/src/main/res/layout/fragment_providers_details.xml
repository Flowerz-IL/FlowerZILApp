<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    tools:context=".view.fragments.providersFragments.providersDetails.providers_details_fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="213dp"
        android:layout_marginBottom="495dp"
        android:background="@color/green_light">

        <TextView
            android:id="@+id/provider_full_name_tv"
            android:layout_width="238dp"
            android:layout_height="46dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/provider_store_name_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/provider_store_name_tv"
            android:layout_width="208dp"
            android:layout_height="22dp"
            android:layout_marginStart="24dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/green_dark"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provider_full_name_tv" />

        <ProgressBar
            android:id="@+id/loader_user_details"
            style="?android:attr/progressBarStyle"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="62dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/edit_details_bt"
            android:layout_width="168dp"
            android:layout_height="169dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/button_card"
            android:fontFamily="sans-serif"
            android:text="@string/edit_details"
            app:backgroundTint="@android:color/transparent"
            app:backgroundTintMode="add"
            app:elevation="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/delete_account_bt"
            android:layout_width="168dp"
            android:layout_height="169dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_card"
            android:fontFamily="sans-serif"
            android:text="@string/delete_user"
            app:backgroundTint="@android:color/transparent"
            app:backgroundTintMode="add"
            app:elevation="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_password_bt" />

        <Button
            android:id="@+id/providers_items_bt"
            android:layout_width="168dp"
            android:layout_height="169dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_card"
            android:fontFamily="sans-serif"
            android:text="@string/my_items"
            app:backgroundTint="@android:color/transparent"
            app:backgroundTintMode="add"
            app:elevation="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_details_bt" />

        <Button
            android:id="@+id/change_password_bt"
            android:layout_width="168dp"
            android:layout_height="169dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_card"
            android:fontFamily="sans-serif"
            android:text="@string/change_password"
            app:backgroundTint="@android:color/transparent"
            app:backgroundTintMode="add"
            app:elevation="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/log_out_bt"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="80dp"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:text="@string/log_out"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/holo_red_light"
            app:backgroundTintMode="add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delete_account_bt" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>